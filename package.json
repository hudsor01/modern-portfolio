{
  "name": "modern-portfolio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.5",
  "engines": {
    "node": ">=22.0.0 <25.0.0"
  },
  "scripts": {
    "dev": "bun --bun next dev",
    "build": "bun --bun next build",
    "build:ci": "bun --bun next build",
    "start": "bun --bun next start",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit --incremental --tsBuildInfoFile .next/cache/tsc-check.tsbuildinfo",
    "test": "bun test",
    "test:unit": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:update-snapshots": "bun test --update-snapshots",
    "test:run": "bun test",
    "e2e": "bunx playwright test",
    "e2e:ui": "bunx playwright test --ui",
    "e2e:headed": "bunx playwright test --headed",
    "generate-sitemap": "bun run scripts/generate-sitemap.js",
    "db:generate": "bunx prisma generate",
    "db:push": "bunx prisma db push",
    "db:migrate": "bunx prisma migrate dev",
    "db:migrate:deploy": "bunx prisma migrate deploy",
    "db:migrate:reset": "bunx prisma migrate reset",
    "db:seed": "bun run prisma/seed.ts",
    "db:studio": "bunx prisma studio",
    "postinstall": "bunx prisma generate",
    "validate": "concurrently \"bun run type-check\" \"bun run lint\"",
    "ci:quick": "concurrently \"bun run lint\" \"bun run type-check\"",
    "ci:local": "bun run lint && bun run type-check && bun test",
    "ci:full": "bun run ci:quick && bun run build",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@prisma/adapter-pg": "7.2.0",
    "@prisma/client": "^7.2.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "1.3.2",
    "@radix-ui/react-label": "2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@tanstack/react-form": "^1.27.7",
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-table": "^8.21.3",
    "@vercel/analytics": "1.6.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "isomorphic-dompurify": "2.35.0",
    "lucide-react": "^0.562.0",
    "motion": "12.24.7",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "nuqs": "2.8.6",
    "pg": "8.16.3",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-day-picker": "9.13.0",
    "react-dom": "^19.2.3",
    "react-error-boundary": "^6.0.2",
    "react-intersection-observer": "10.0.0",
    "react-resizable-panels": "4.3.0",
    "recharts": "^3.6.0",
    "resend": "^6.6.0",
    "server-only": "0.0.1",
    "sharp": "^0.34.5",
    "sonner": "^2.0.7",
    "swiper": "^12.0.3",
    "vaul": "1.1.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@happy-dom/global-registrator": "20.0.11",
    "@next/eslint-plugin-next": "16.1.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "bun-types": "1.3.5",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "fast-check": "4.5.3",
    "happy-dom": "20.0.11",
    "lefthook": "2.0.13",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prisma": "^7.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "1.4.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.52.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  }
}
