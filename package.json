{
  "name": "modern-portfolio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.6",
  "engines": {
    "node": ">=22.0.0 <25.0.0"
  },
  "scripts": {
    "dev": "bun --bun next dev",
    "build": "next build",
    "build:ci": "bun --bun next build",
    "start": "bun --bun next start",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "ci:quick": "bun run lint && bun run typecheck",
    "generate-sitemap": "bun run scripts/generate-sitemap.js",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:chromium": "playwright test --project=chromium",
    "e2e:report": "playwright show-report",
    "db:generate": "bunx prisma generate",
    "db:push": "bunx prisma db push",
    "db:push:dev": "bunx prisma db push",
    "db:migrate": "bunx prisma migrate dev",
    "db:migrate:deploy": "bunx prisma migrate deploy",
    "db:studio": "bunx prisma studio",
    "db:seed": "bunx prisma db seed",
    "db:reset": "bunx prisma migrate reset"
  },
  "dependencies": {
    "@prisma/adapter-neon": "7.2.0",
    "@prisma/adapter-pg": "7.2.0",
    "@prisma/client": "^7.2.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@sentry/nextjs": "10.34.0",
    "@tanstack/react-form": "1.27.7",
    "@tanstack/react-table": "^8.21.3",
    "@vercel/analytics": "1.6.1",
    "beasties": "0.3.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "isomorphic-dompurify": "2.35.0",
    "lucide-react": "^0.562.0",
    "motion": "12.26.2",
    "next": "16.1.5",
    "next-themes": "^0.4.6",
    "nuqs": "2.8.6",
    "pg": "8.17.0",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-day-picker": "9.13.0",
    "react-dom": "^19.2.3",
    "react-error-boundary": "6.0.3",
    "react-hook-form": "7.71.1",
    "react-intersection-observer": "10.0.0",
    "react-resizable-panels": "4.4.1",
    "recharts": "^3.6.0",
    "resend": "6.7.0",
    "server-only": "0.0.1",
    "sharp": "^0.34.5",
    "sonner": "^2.0.7",
    "swiper": "^12.0.3",
    "vaul": "1.1.2",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "16.1.2",
    "@playwright/test": "1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "bun-types": "1.3.6",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.2",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "lefthook": "2.0.15",
    "lint-staged": "^16.2.7",
    "prisma": "^7.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "5.9.3",
    "typescript-eslint": "8.53.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  }
}
