{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    //========== Target and module ==========
    // Use ESNext for modern JavaScript features (no transpilation)
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ESNext.Disposable"],
    // Use bundler for better compatibility with Next.js and bundlers
    "module": "ESNext",
    "moduleResolution": "bundler",
    //========== Type checking ==========
    // Essential: activates several useful options
    "strict": true,
    // Beyond "strict": additional strictness (but more compatible)
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "useUnknownInCatchVariables": true,
    //========== Module resolution ==========
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    //========== Emit ==========
    "noEmit": true,
    "isolatedModules": true,
    //========== JSX ==========
    "jsx": "react-jsx",
    //========== Performance ==========
    "incremental": true,
    "tsBuildInfoFile": "./.next/cache/tsconfig.tsbuildinfo",
    //========== Types ==========
    "types": ["bun-types", "node", "next", "@testing-library/jest-dom"],
    //========== Next.js ==========
    "plugins": [
      {
        "name": "next"
      }
    ],
    //========== Path mapping ==========
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/types/*": ["./src/types/*"],
      "@/app/*": ["./src/app/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/content/*": ["./src/content/*"],
      "@/data/*": ["./src/data/*"],
      "@/prisma/*": ["./prisma/generated/prisma/*"],
      "@/prisma/client": ["./prisma/generated/prisma/client.ts"],
      "@/prisma/browser": ["./prisma/generated/prisma/browser.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build",
    "coverage",
    ".nyc_output",
    "e2e/**/*",
    "playwright-report",
    "test-results",
    "scripts",
    "docs",
    "temp",
    "tmp"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
