{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "tsBuildInfoFile": "./.next/cache/tsconfig.tsbuildinfo",
    "types": [
      "node",
      "next"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/app/*": [
        "./src/app/*"
      ],
      "@/styles/*": [
        "./src/styles/*"
      ],
      "@/content/*": [
        "./src/content/*"
      ],
      "@/data/*": [
        "./src/data/*"
      ]
    }
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build",
    "**/*.config.js",
    "**/*.config.mjs",
    "coverage",
    ".nyc_output",
    "e2e",
    "playwright",
    "scripts",
    "docs",
    "temp",
    "tmp",
    "src/test/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/app/blog/**/*",
    "src/components/blog/**/*",
    "src/app/api/blog/**/*",
    "src/types/blog*.ts",
    "src/lib/blog-*.ts",
    "src/styles/blog-*.css",
    "src/components/**/blog-*.tsx",
    "src/components/seo/blog-*.tsx",
    "src/components/ui/accessible-form.tsx",
    "src/components/ui/component-base.tsx",
    "src/lib/queries/analytics.ts",
    "src/lib/queries/categories.ts",
    "src/lib/queries/authors.ts",
    "src/lib/queries/tags.ts",
    "src/lib/design-system.ts",
    "src/lib/queries/blog-posts.ts",
    "src/lib/seo/automation-service.ts",
    "src/lib/seo/content-analyzer.ts",
    "src/lib/seo/technical-automation.ts",
    "src/lib/seo/**/*",
    "src/app/api/automation/**/*",
    "src/lib/automation/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
